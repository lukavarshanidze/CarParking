<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if(errorMessage.length > 0) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="product-form" action="<% if(editing) { %> /edit-parking <% } else { %>/create-parking<% } %>" method="POST">
            <div class="form-control">
                <label for="parkingName">Parking Name</label>
                <input type="text" name="parkingName" id="parkingName" value="<% if(editing) { %> <%= editZone.name%>  <% } else { %><% } %>">
            </div>
            <div class="form-control">
                <label for="parkingAddress">Parking Address</label>
                <input type="text" name="parkingAddress" id="parkingAddress" value="<% if(editing) { %> <%= editZone.address%>  <% } else { %><% } %>">
            </div>
            <div class="form-control">
                <label for="parkingPrice">Hourly Price</label>
                <input type="number" name="parkingPrice" id="parkingPrice" step="0.01" value="<%= editing ? parseFloat(editZone.hourlyPrice) : '' %>">
            </div>
            <% if (true) { %>
                <input type="hidden" value="" name="carId">
            <% } %>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
            <input type="hidden" name="parkingId" value="<%= editZone.id %>"/>
            <button class="btn" type="submit"><% if(editing) { %> Update Parking Zone  <% } else { %>Create Parking Zone<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>